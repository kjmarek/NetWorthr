<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/primary_transparent"
    android:layout_centerInParent="true">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginHorizontal="20dp"
        android:layout_marginVertical="60dp"
        android:background="@color/background">
        <TextView
            android:id="@+id/modal_account_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_centerHorizontal="true"
            android:textSize="22sp"
            android:textColor="@color/text"
            android:text="Add an Account" />

        <Spinner
            android:id="@+id/modal_account_spinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:backgroundTint="@color/text"
            android:layout_below="@id/modal_account_text">
        </Spinner>

        <EditText
            android:id="@+id/modal_account_label"
            android:layout_below="@id/modal_account_spinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:backgroundTint="@color/edit_text_color"
            android:hint="Label"
            android:inputType="text"
            android:textColor="@color/text"
            android:textColorHint="@color/text" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true" >

            <Button
                android:id="@+id/modal_account_cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="10dp"
                android:layout_marginHorizontal="15dp"
                android:background="@drawable/greenbtn_bg"
                android:textColor="@color/text"
                android:text="Cancel"/>

            <Button
                android:id="@+id/modal_account_add"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="10dp"
                android:layout_marginHorizontal="15dp"
                android:background="@drawable/greenbtn_bg"
                android:textColor="@color/text"
                android:text="Add"/>

        </LinearLayout>


    </RelativeLayout>


</RelativeLayout>