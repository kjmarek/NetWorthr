<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/primary_transparent"
    android:layout_centerInParent="true">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginHorizontal="20dp"
        android:layout_marginVertical="60dp"
        android:background="@color/background"
        android:orientation="vertical">
        <TextView
            android:id="@+id/modal_account_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_gravity="center"
            android:layout_centerHorizontal="true"
            android:textSize="22sp"
            android:textColor="@color/text"
            android:text="Add an Account" />

        <Spinner
            android:id="@+id/modal_account_spinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:layout_gravity="center"
            android:backgroundTint="@color/text"
            android:layout_below="@id/modal_account_text">
        </Spinner>

        <LinearLayout
            android:id="@+id/modal_add_edit_account_view_group"
            android:layout_width="match_parent"
            android:layout_gravity="center"
            android:layout_centerHorizontal="true"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="vertical" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:layout_gravity="center|bottom">

            <Button
                android:id="@+id/modal_account_cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="15dp"
                android:layout_marginVertical="10dp"
                android:layout_gravity="bottom|center_horizontal"
                android:background="@drawable/greenbtn_bg"
                android:text="Cancel"
                android:textColor="@color/text" />

            <Button
                android:id="@+id/modal_account_add"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="15dp"
                android:layout_marginVertical="10dp"
                android:layout_gravity="bottom|center_horizontal"
                android:background="@drawable/greenbtn_bg"
                android:text="Add"
                android:textColor="@color/text" />

        </LinearLayout>

    </LinearLayout>





</RelativeLayout>