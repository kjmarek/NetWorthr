<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/account_list_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@drawable/card_bg"
    android:weightSum="3"
    tools:context="team_10.client.MainActivity">

    <TextView
        android:id="@+id/account_label"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:textSize="8pt"
        android:textColor="@color/text"
        android:paddingLeft="20dp"
        android:paddingBottom="5dp"
        android:layout_weight="1"
        android:text="Hello" />

    <TextView
        android:id="@+id/account_value"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="8pt"
        android:textColor="@color/text"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingBottom="5dp"
        android:layout_weight="1"
        android:text="Hello" />

    <LinearLayout
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:weightSum="8"
        android:paddingRight="20dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/account_percent"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:textSize="8pt"
            android:textColor="@color/text"
            android:paddingRight="5dp"
            android:paddingBottom="5dp"
            android:layout_weight="6"
            android:text="Hello" />

        <ImageView
            android:id="@+id/account_percent_image"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:adjustViewBounds="true"
            android:layout_toRightOf="@id/account_percent"
            android:layout_centerVertical="true"
            android:paddingTop="6dp"
            android:scaleType="fitCenter"
            android:layout_weight="2"
            android:src="@drawable/percent_up" />

    </LinearLayout>

</LinearLayout>